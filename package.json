{
  "name": "fancymon",
  "displayName": "FancyMon - Serial Monitor",
  "description": "A fancy serial monitor with advanced features including filtering, plotting, and real-time data visualization",
  "version": "0.0.3",
  "publisher": "wombat",
  "icon": "fancymon_no_text.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tom88holmes/fancymon.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "serial",
    "monitor",
    "uart",
    "usb",
    "arduino",
    "embedded",
    "plotting",
    "data",
    "visualization",
    "filtering",
    "ansi",
    "terminal"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fancymon.start",
        "title": "Start Serial Monitor",
        "category": "FancyMon",
        "icon": "$(terminal)"
      },
      {
        "command": "fancymon.test",
        "title": "FancyMon Test",
        "category": "FancyMon"
      },
      {
        "command": "fancymon.disconnect",
        "title": "Disconnect Serial Monitor",
        "category": "FancyMon"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "fancymon.serialMonitor",
          "name": "Serial Monitor",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "increment-build": "node build-number.js",
    "compile": "npm run increment-build && npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "serialport": "^11.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
